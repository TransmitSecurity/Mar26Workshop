{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable"
    ],
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove",
    "composite": true,
    "baseUrl": ".",
    "types": [
      "node",
      "web"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  }
}